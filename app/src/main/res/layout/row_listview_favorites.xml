<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_row_listview"
    android:layout_height="70dp"

    >

    <TextView
        android:id="@+id/typeConversionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="CAD"
        android:textColor="@color/ColorText"
         />

    <TextView
        android:id="@+id/coinNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        app:layout_constraintStart_toStartOf="@+id/typeConversionId"
        app:layout_constraintTop_toBottomOf="@+id/typeConversionId"
        android:layout_marginTop="10dp"
        android:textColor="@color/ColorText"
        />

    <TextView
        android:id="@+id/valueConversionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/typeConversionId"
        android:textColor="@color/ColorText"
         />

    <TextView
        android:id="@+id/quantityCryptoMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/coinNameId"
        android:textColor="@color/ColorText"
        />


    <TextView
        android:id="@+id/textViewSymbolCurrencyFavoritesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA$"
        app:layout_constraintRight_toLeftOf="@id/valueConversionId"
        app:layout_constraintBaseline_toBaselineOf="@id/valueConversionId"
        android:layout_marginRight="5dp"
        android:textColor="@color/ColorText"
        />
</android.support.constraint.ConstraintLayout>