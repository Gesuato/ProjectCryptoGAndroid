<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_row_listview">

    <TextView
        android:id="@+id/typeConversionCurrentCountryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/ColorText"
        android:text="CAD"

        />

    <TextView
        android:id="@+id/coinNameCurrentCountryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        app:layout_constraintStart_toStartOf="@+id/typeConversionCurrentCountryId"
        app:layout_constraintTop_toBottomOf="@+id/typeConversionCurrentCountryId"
        android:layout_marginTop="10dp"
        android:textColor="@color/ColorText"
        />

    <TextView
        android:id="@+id/valueConversionCurrentCountryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/typeConversionCurrentCountryId"
        android:textColor="@color/ColorText"
        />

    <TextView
        android:id="@+id/quantityCryptoMoneyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/coinNameCurrentCountryId"
        android:textColor="@color/ColorText"
        />

    <TextView
        android:id="@+id/textViewSymbolCurrencyCurrentCountryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA$"
        app:layout_constraintRight_toLeftOf="@id/valueConversionCurrentCountryId"
        app:layout_constraintBaseline_toBaselineOf="@id/valueConversionCurrentCountryId"
        android:layout_marginRight="5dp"
        android:textColor="@color/ColorText"
        />

</android.support.constraint.ConstraintLayout>